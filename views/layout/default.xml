<?xml version="1.0"?>
<layout version="0.1.0">
<!--
Default layout, loads most of the pages
-->

    <default>
        <block class="\Ext\Page\Html" name="root" template="page.3columns">

            <block class="\Ext\Page\Html\Head" name="head" as="head">
                <action method="addJs"><script>js/script.js</script></action>

                <action method="addCss"><stylesheet>css/styles.css</stylesheet></action>
                <action method="addItem">
                        <type>css</type>
                        <name>css/styles-ie.css</name>
                        <params/><if>lt IE 8</if>
                </action>
                <action method="addCss">
                    <stylesheet>css/widgets.css</stylesheet>
                </action>
                <action method="addCss">
                    <stylesheet>css/print.css</stylesheet>
                    <params>media="print"</params>
                </action>
                
            </block>
			
            <block class="\Ext\Page\BlockList" name="after_body_start" as="after_body_start" >
            </block>


            <block class="\Ext\Page\Html\Header" name="header" as="header">
                <block class="\Ext\Page\Html\Links" name="top.links" as="topLinks"/>
                <block class="\Ext\Page\BlockList" name="top.menu" as="topMenu" >
                    <block class="\Ext\Page\Html\TopMenu" name="topnav" template="page.html.topmenu"/>
                </block>
                <block class="\Ext\Page\Html\Wrapper" name="top.container" as="topContainer">
                    <action method="setElementClass"><value>top-container</value></action>
                </block>
            </block>

            <block class="\Ext\Page\Html\Breadcrumbs" name="breadcrumbs" as="breadcrumbs"/>

            <block class="\Ext\Page\BlockList" name="left" as="left">
            </block>

            <block class="core/messages" name="messages" as="messages"/>

            <block class="\Ext\Page\BlockList" name="content" as="content">
            </block>

            <block class="\Ext\Page\BlockList" name="right" as="right">
            </block>

            <block class="page/html_footer" name="footer" as="footer" template="page/html/footer.phtml">
                <block class="\Ext\Page\Html\Wrapper" name="bottom.container" as="bottomContainer">
                    <action method="setElementClass"><value>bottom-container</value></action>
                </block>

                <block class="\Ext\Page\Html\Links" name="footer_links" as="footer_links" template="page/template/links.phtml"/>
            </block>

            <block class="\Ext\Page\BlockList" name="before_body_end" as="before_body_end">
                <block class="page/html_cookieNotice" name="global_cookie_notice" as ="global_cookie_notice" template="page/html/cookienotice.phtml" before="-" />
            </block>
        </block>

        <block class="core/profiler" name="core_profiler"/>
    </default>
</layout>
